<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link href="https://maplaine.fr/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://maplaine.fr/css/bootstrap-datepicker.min.css" rel="stylesheet">
        <link href="https://maplaine.fr/css/jquery.dataTables.min.css" rel="stylesheet">
        <link href="https://maplaine.fr/css/ionicons.min.css?v=2.0.1" rel="stylesheet">
        <script src="https://maplaine.fr/js/jquery.min.js"></script>
        <script src="https://maplaine.fr/js/bootstrap.min.js"></script>
        <script src="https://maplaine.fr/js/bootstrap-datepicker.min.js"></script>
        <script src="https://maplaine.fr/js/bootstrap-datepicker.fr.min.js"></script>
        <link href='https://maplaine.fr/lib/DataTables/datatables.min.css' rel='stylesheet' />
        <script src='https://maplaine.fr/lib/DataTables/datatables.min.js'></script>
        <script src='https://maplaine.fr/js/list.min.js'></script>
    {% block javascripts %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-inverse navbar-static-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar" class="navbar-toggle collapsed">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="/" class="navbar-brand">Education</a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">

                    <ul class="nav navbar-nav">
                        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Backend<span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="{{ path('admin')}}">Admin</a></li>
                                        <li><a href="{{ path('admin_apikeys')}}">Api Key</a></li>
                                    </ul>
                                </li>
                            {% endif %}
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{'Student' | trans}}<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="/licenses">Licenses</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Professor<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                            </ul>
                        </li>
                        {% endif %}
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <!--button(type='button', class='btn btn-default navbar-btn') Sign in-->
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Profile<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                    <li><a href="{{ url('fos_user_security_logout') }}">Deconnexion</a></li>
                                    <li><a href="{{ url('fos_user_profile_edit') }}">{{ app.user.username }}</a></li>
                                {% else %}
                                    <li><a href="{{ url('fos_user_security_login') }}">{{ 'Login'|trans }} </a></li>
                                    <li><a href="{{ url('fos_user_registration_register') }}">{{ 'Register'|trans }} </a></li>
                                {% endif %}

                            </ul>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
        {% block body %}{% endblock %}
    </body>
</html>
